
ul.side-nav
  display block
  list-style none
  margin 0
  padding modular-scale(1) 0

  li
    display block
    list-style none
    margin 0 0 (modular-scale(0)/2) 0

    a
      display block

    &.active a
      color lighten(black, 30%)
      font-weight bold

    &.divider
      border-top 1px solid darken(white, 10%)
      height 0
      padding 0


